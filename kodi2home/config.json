{
  "name": "Kodi2Home (Optimized)",
  "version": "0.4.1",
  "slug": "kodi2home-optimized",
  "description": "Kodi to Home Assistant bridge - Optimized fork by goodlucknow",
  "url": "https://github.com/goodlucknow/kodi2home",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "init":false,
  "startup": "application",
  "boot": "auto",
  "homeassistant_api": true,
  "options": {
  	"kodi_address": "your kodi ip address",
  	"kodi_http_port": 8080,
  	"kodi_ws_port": 9090,
  	"kodi_username": "your username",
  	"kodi_password": "your password",
  	"home_address": "ws://supervisor/core/api/websocket",
  	"home_ssl": false
  	},
  "schema": {
  	"kodi_address": "str",
  	"kodi_http_port": "int",
  	"kodi_ws_port": "int",
  	"kodi_username": "str",
  	"kodi_password": "password",
  	"home_address": "str",
  	"home_ssl": "bool"
  }
}
